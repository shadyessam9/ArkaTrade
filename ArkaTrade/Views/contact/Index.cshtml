@model ArkaTrade.viewmodels.viewlists;


<head>
  <!-- Template Main CSS File -->
  <link href="~/css/stylehome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        .fa {
            padding: 20px;
            font-size: 30px;
            width: 100%;
            text-align: center;
            text-decoration: none;
            margin: 5px 2px;
        }

            .fa:hover {
                opacity: 1;
            }

        .fa-facebook {
            background: #3B5998;
            color: white;
        }


        .fa-youtube {
            background: #bb0000;
            color: white;
        }

        .fa-instagram {
            background: #f40083;
            color: white;
        }


        .fa-whatsapp {
            background: #00b489;
            color: white;
        }


    </style>


</head>

<body>

  <main id="main" style="direction:ltr !important">

    <!-- ======= Contact Section ======= -->
    <div class="map-section" style="height:75vh">
            <iframe style="border:0; width: 100%; height: 100%;" src="https://maps.google.com/maps?q=Egypt-Buhaira-ItayAl-Baroud&t=&z=10&ie=UTF8&iwloc=&output=embed" frameborder="0" allowfullscreen></iframe>
    </div>


    <section id="contact" class="contact">
            <div class="container" style="min-height:300px" data-aos="fade-up">


                <div class="section-title" data-aos="fade-up">
                    <h2><strong>Contact US</strong></h2>
                </div>

        <div class="row justify-content-center" data-aos="fade-up">

          <div class="col-lg-10">

            <div class="info-wrap">
              <div class="row">
                <div class="col-lg-4 info">
                  <i class="bi bi-geo-alt"></i>
                  <h4>Location</h4>
                  <ul style="margin:8%;">
                       @foreach(var item in Model.locations)
                       {
                          <li style="margin:5%; font-size:18px">@item.location1</li>                  
                        }
                   </ul>
                </div>

                <div class="col-lg-4 info">
                  <i class="bi bi-envelope"></i>
                  <h4>Emails</h4>
                   <ul style="margin:8%;">
                       @foreach(var item in Model.mails)
                       {
                          <li style="margin:5%; font-size:18px">@item.email</li>                  
                        }
                   </ul>
                </div>

                <div class="col-lg-4 info">
                  <i class="bi bi-phone"></i>
                  <h4>Phones</h4>
                   <ul style="margin:8%;">
                       @foreach(var item in Model.phones)
                       {
                          <li style="margin:5%; font-size:18px">@item.phone1</li>                  
                        }
                   </ul>
                </div>
              </div>
            </div>

          </div>

        </div>
      </div>
    </section><!-- End Contact Section -->


        <section id="clients" class="clients">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2><strong>Social Media</strong></h2>
                </div>
                <div class="row no-gutters clients-wrap clearfix" data-aos="fade-up">              
                        <div class="col-lg-3 col-md-4 col-xs-6">
                            <div class="client-logo">
                            <a href="#" class="fa fa-facebook"></a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-4 col-xs-6">
                            <div class="client-logo">
                            <a href="#" class="fa fa-youtube"></a>
                            </div>
                        </div>
                    <div class="col-lg-3 col-md-4 col-xs-6">
                        <div class="client-logo">
                            <a href="https://wa.me/201006724853" class="fa fa-whatsapp"></a>
                        </div>
                    </div>
                          <div class="col-lg-3 col-md-4 col-xs-6">
                            <div class="client-logo">
                            <a href="#" class="fa fa-instagram"></a>
                            </div>
                        </div>
                   
                </div>
            </div>
        </section><!-- End Our Clients Section -->


  </main><!-- End #main -->
</body>