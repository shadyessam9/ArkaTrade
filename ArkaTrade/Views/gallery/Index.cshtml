@model ArkaTrade.viewmodels.viewlists;
<head>
    <!-- Template Main CSS File -->
    <link href="~/css/stylehome.css" rel="stylesheet">
</head>

<body>


    <main id="main">
        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container" style="min-height:1000px" data-aos="fade-up">
                <div class="section-title" data-aos="fade-up">
                    <h2><strong>Gallery</strong></h2>
                </div>
                <div class="row" data-aos="fade-up">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <ul id="portfolio-flters">
                            <li data-filter="*" class="filter-active">All</li>
                            <li data-filter=".filter-ArkaTrade">ArkaTrade</li>
                            <li data-filter=".filter-Brouj">Brouj</li>
                            <li data-filter=".filter-ElBarakat">ElBarakat</li>
                        </ul>
                    </div>
                </div>
                <div class="row portfolio-container" data-aos="fade-up">

                    @foreach (var item in Model.images)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item filter-@item.dept">
                            <img src="data:@item.ContentType;base64,@(Convert.ToBase64String(@item.Data))" class="img-fluid">
                        </div>
                    }
                </div>
            </div>
        </section><!-- End Portfolio Section -->
    </main><!-- End #main -->
</body>

